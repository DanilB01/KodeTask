<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.RecipeApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/paleGreen</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/paleGreenAlpha</item>

        <item name="fontFamily">@font/custom_font</item>
    </style>

    <style name="FullScreenDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="DialogStyle" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextViewSize">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="PlaceholderTextViewStyle" parent="TextViewSize">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
    </style>

    <style name="TitleTextStyle" parent="TextViewSize">
        <item name="android:textSize">@dimen/titleTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SubtitleTextStyle" parent="TextViewSize">
        <item name="android:textSize">@dimen/subtitleTextSize</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="BasicTextStyle" parent="TextViewSize">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/basicTextSize</item>
    </style>

    <style name="BasicTextStyle.Bold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/subtitleTextSize</item>
    </style>

    <style name="DialogButtonsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PhotoShowImageButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="MainToolbarStyle">
        <item name="android:background">@color/paleGreen</item>
        <item name="menu">@menu/menu_main</item>
        <item name="title">@string/app_name</item>
        <item name="titleTextColor">@color/black</item>
    </style>
</resources>