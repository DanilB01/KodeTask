<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/notFoundImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pic_not_found" />

    <TextView
        android:id="@+id/notFoundTextView"
        style="@style/PlaceholderTextViewStyle"
        android:text="@string/notFoundMessage"
        app:layout_constraintEnd_toEndOf="@+id/notFoundImageView"
        app:layout_constraintStart_toStartOf="@+id/notFoundImageView"
        app:layout_constraintTop_toBottomOf="@+id/notFoundImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>